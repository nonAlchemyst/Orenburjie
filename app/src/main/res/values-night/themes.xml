<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Orenburjie" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/c262626</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background" parent="android:background">@color/c121212</item>
        <item name="nav_bar_with_title_title_color">@color/ceaebed</item>
        <item name="nav_bar_height">44dp</item>
        <item name="menu_image_height">175dp</item>

        <item name="primaryTextColor">@color/cffffff</item>
        <item name="secondaryTextColor">@color/c262626</item>
        <item name="primaryBackgroundColor">@color/c262626</item>
        <item name="secondaryBackgroundColor">@color/c3b3b3b</item>
        <item name="gradientStartColor">@color/c80ffffff</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.Orenburjie">
        <item name="android:windowBackground">@color/black</item>
    </style>

</resources>